<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><%= @place["name"] %></h2>
  <%= link_to "New Entry", "/places/#{@place["id"]}/entries/new", { "class" => "btn btn-secondary" } %>
</div>

<p><strong>Location:</strong> <%= @place["location"] %></p>
<p><%= @place["description"] %></p>

<h3 class="mt-4">My Entries</h3>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-lg-4 col-md-6 mb-3">
      <div class="card h-100">
        <% if entry.image.attached? %>
          <%= image_tag(
                entry.image.variant({ "resize_to_limit" => [400, 200] }),
                { "class" => "card-img-top" }
              ) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="card-text"><%= truncate(entry["long_desc"], { "length" => 100 }) %></p>
          <p class="text-muted">
            <small><%= entry["occurred_on"].strftime("%b %d, %Y") %></small>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>