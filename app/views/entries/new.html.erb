<h1>New Entry for <%= @place["name"] %></h1>

<form
  action="/places/<%= @place["id"] %>/entries"
  method="post"
  enctype="multipart/form-data"
>
  <!-- CSRF token so Rails will accept the POST -->
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
  >

  <div class="mb-3">
    <label for="entry_title" class="form-label">Title</label>
    <input
      type="text"
      name="entry[title]"
      id="entry_title"
      class="form-control"
      required
    >
  </div>

  <div class="mb-3">
    <label for="entry_description" class="form-label">Description</label>
    <textarea
      name="entry[description]"
      id="entry_description"
      rows="4"
      class="form-control"
    ></textarea>
  </div>

  <div class="mb-3">
    <label for="entry_occurred_on" class="form-label">Occurred On</label>
    <input
      type="date"
      name="entry[occurred_on]"
      id="entry_occurred_on"
      class="form-control"
      required
    >
  </div>

  <div class="mb-3">
    <label for="entry_uploaded_image" class="form-label">Upload Image (optional)</label>
    <input
      type="file"
      name="entry[uploaded_image]"
      id="entry_uploaded_image"
      class="form-control"
      accept="image/png,image/jpg,image/jpeg,image/gif"
    >
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>